extends layout
block content
    div(class="card container blogcontainer ")
        img(src=` /images/${blog.banner}`)
        h3(class="blog-title") #{blog.title}
        h4 #{blog.body}
        p(style="color:red")  Created by #{blog.name}
        p(style="color:gray") Created on #{blog.createdOn}
        br   